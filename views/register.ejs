<%- include ("./partials/header")%> 
<div class="container-fluid bg-primary">
    <div class="row justify-content-center">
        <h1 style="text-align:center;color: #fff;"> Register</h1>
        <div style="width:30%; margin:30px auto;">
        <form action="register" method="POST" class="shadow-lg">
            <!-- <div class="form-group">
                <input class="form-control transparent-input" type='text' name='name' placeholder="Field title..."  required>
              </div> -->
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email Id"required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="py" placeholder="Batch"required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username"required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password"required>
                </div>
                <div class="main"style="color: #fff;">
                    <input type="radio"  id="Student" name="job" value="Student"/>Student
                    <input type="radio" id="Alumni" name="job" value="Alumni"/>Alumni
              
                    <input type="radio" id="Faculty" name="job" value="Faculty" />Faculty
                  </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="branch" placeholder="Branch"required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="ys" placeholder="Describe yourself" required></textarea>
                </div>
               
                <div class="form-group">
                    <input type="submit" class="btn btn-info btn-block" value="Submit!!">
                </div>

               
            </form>
            <!-- <a class="btn btn-primary " href="/">Go Back </a> -->
        </div>
        
    </div>
</div>
<%- include ("./partials/footer") %>
